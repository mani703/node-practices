<!DOCTYPE html>
<html>
<head>
<title>mysite</title>
<meta http-equiv="content-type" content="text/html; charset=utf-8">
<link href="/assets/css/board.css" rel="stylesheet" type="text/css">
</head>
<body>
	<div id="container">
		<%-include('../includes/header')%>
		<div id="content">
			<div id="board" class="board-form">
				<table class="tbl-ex">
					<tr>
						<th colspan="2">글보기</th>
					</tr>
					<tr>
						<td class="label">제목</td>
						<td><%=board.title %></td>
					</tr>
					<tr>
						<td class="label">내용</td>
						<td>
							<div class="view-content">
								<%-board.contents.replace(/\n/gi, '</br>') %>
							</div>
						</td>
					</tr>
				</table>
				<div class="bottom">
					<a href="/board">글목록</a>
					<% if(!req.session.authUser) { %>

					<% } else if(req.session.authUser && req.session.authUser.no == board.userNo){ %>
							<a href="/board/modify/<%=board.no %>">글수정</a>
							<a href="/board/reply/<%=board.no %>">글달기</a>
					<% } else if(req.session.authUser && req.session.authUser.no != board.userNo) { %>
							<a href="/board/reply/<%=board.no %>">글달기</a>
					<% } %>
				</div>
			</div>
		</div>
		<%-include('../includes/navigation')%>
		<%-include('../includes/footer')%>
	</div>
</body>
</html>